@model IEnumerable<HABsMap.Models.StatusModel>

@{
    ViewBag.Title = "Area Status List View";

}



<div class="container page-container">
    <div class="row">
        <div class="col-md-12">

            <!--Search Form-->
            <div class="well" style="text-align:center;">
                <h2 class="searchbox-h2"><span class="glyphicon glyphicon-search"></span>    Search the Shellfish Harvesting Areas Current Status</h2>
                <p class="lead searchbox-p">Enter a location name to find the current status of a shellfish harvesting point.</p>
                <hr />

                @using (Html.BeginForm("ListView", "Status", FormMethod.Post, new { @class = "form-inline" }))
                {
                    <label for="enter location name">Select a Location:</label>
                    <div class="form-group">
                        @Html.DropDownList("areaname", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-marine">Search Areas</button>
                }

            </div>
            <!--End Search Form-->
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Species)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.frequency)
                        </th>
                    </tr>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Species)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.frequency) Days
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
