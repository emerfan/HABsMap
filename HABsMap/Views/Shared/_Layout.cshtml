<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Leaflet.JS CSS-->
    <link href="~/Content/leaflet.css" rel="stylesheet" />

    <!--Minified JQuery for Map-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>


    <!--AngularJS Minified Library-->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Controllers/Angular_Controllers/SearchSamples.js"></script>

</head>
<body>
    <div class="navbar navbar-marine  navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Disclaimer", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--LeafletJS minified script-->
    <script src="~/Scripts/leaflet-0.7.3.min.js"></script>
    <script src="~/Scripts/map-init.js"></script>
    <script src="~/Scripts/harvesting-areas.js"></script>
</body>
</html>
