@model IEnumerable<HABsMap.Models.SampleModel>

@{
    ViewBag.Title = "HABs Shellfish Samples";

}






<div class="container page-container">
    <div class="row">
        <div class="col-md-12">
            <!--If areaname parameter is passed to the controller, display heading with the area name, else display search all samples-->
            @if (ViewBag.AreaName != null)
            {
                <h2>Search Sample Results For @ViewBag.AreaName</h2>
            }

            else
            {
                <h2>Search All Samples</h2>
            }

       <!--Search Form-->
       <div class="well">

            @using (Html.BeginForm("Index", "Sample", FormMethod.Post, new { @class = "form-inline" }))
            { 
                <label for="exampleInputName2">Location Name</label>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtAreaname" name="areaname" />
                    </div>
                <label for="exampleInputEmail2">Species</label>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtSpecies" name="species" />
                    </div>
                <label for="exampleInputEmail2">Sample Date</label>
                    <div class="form-group">
                        <input type="text" class="form-control date-picker" id="txtDate" name="date" />
                    </div>
                    <button type="submit" class="btn btn-info">Search All Samples</button>
                }

         </div>
         <!--End Search Form-->


            <div class="table-responsive">

                <!-- Breadcrumbs of current search -->
                <ul class="breadcrumb" style="margin-bottom: 0px;">
                    <li>Your Search:</li>
                    <li><strong>Location Name:</strong> @ViewBag.AreaName</li>
                    <li><strong>Sample Species:</strong> @ViewBag.Species</li>
                    <li><strong>Sample Date:</strong> @ViewBag.Date</li>
                </ul>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Species)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tissue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ASP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PSP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AZP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DSP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PTX)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.YTX)
                        </th>
                    </tr>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Species)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tissue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ASP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AZP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PTX)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YTX)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

